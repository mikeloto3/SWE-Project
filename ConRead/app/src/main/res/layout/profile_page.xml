<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/constraintLayout"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.example.akoni.conread.TabMenu$PlaceholderFragment">


    <ImageView
        android:id="@+id/imageView3"
        android:layout_width="150dp"
        android:layout_height="70dp"
        android:layout_above="@+id/textView3"
        android:layout_centerHorizontal="true"
        android:layout_marginBottom="45dp"
        android:src="@drawable/use" />

    <EditText
        android:id="@+id/profileName"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_above="@+id/textView4"
        android:layout_marginBottom="11dp"
        android:layout_marginStart="23dp"
        android:layout_toEndOf="@+id/textView7"
        android:background="@color/colorAccent"
        android:ems="10"
        android:inputType="textPersonName" />

    <EditText
        android:id="@+id/profileAddress"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_above="@+id/textView7"
        android:layout_alignStart="@+id/profileName"
        android:layout_marginBottom="15dp"
        android:background="@color/colorAccent"
        android:ems="10"
        android:inputType="textPersonName" />

    <EditText
        android:id="@+id/profileContact"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignBaseline="@+id/textView7"
        android:layout_alignBottom="@+id/textView7"
        android:layout_alignStart="@+id/profileAddress"
        android:background="@color/colorAccent"
        android:ems="10"
        android:inputType="textPersonName" />

    <EditText
        android:id="@+id/profileUsername"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignStart="@+id/profileContact"
        android:layout_below="@+id/profileContact"
        android:layout_marginTop="17dp"
        android:background="@color/colorAccent"
        android:ems="10"
        android:inputType="textPersonName" />

    <TextView
        android:id="@+id/textView3"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignBottom="@+id/profileName"
        android:layout_alignParentStart="true"
        android:layout_marginStart="25dp"
        android:textSize="20dp"
        android:text="Name" />

    <TextView
        android:id="@+id/textView4"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignBottom="@+id/profileAddress"
        android:layout_alignStart="@+id/textView3"
        android:text="Address"
        android:textSize="20dp" />

    <TextView
        android:id="@+id/textView7"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_alignStart="@+id/textView4"
        android:layout_marginBottom="229dp"
        android:text="Contact No."
        android:textSize="20dp" />

    <TextView
        android:id="@+id/textView8"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignBottom="@+id/profileUsername"
        android:layout_alignStart="@+id/textView7"
        android:textSize="20dp"
        android:text="Username" />

    <Button
        android:id="@+id/editButton"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignEnd="@+id/profileUsername"
        android:layout_below="@+id/textView8"
        android:layout_marginEnd="30dp"
        android:layout_marginTop="48dp"
        android:background="@color/colorAccent"
        android:text="edit" />
</RelativeLayout>