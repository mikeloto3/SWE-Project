<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/login"
    tools:context="com.example.akoni.conread.SignIn">


    <ImageView
        android:id="@+id/imageView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="40dp"
        app:srcCompat="@drawable/gwapako" />

    <EditText
        android:id="@+id/SignIn_Email"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignStart="@+id/SignIn_Password"
        android:layout_below="@+id/imageView"
        android:layout_marginTop="62dp"
        android:background="@color/colorPrimary"
        android:ems="10"
        android:inputType="textPersonName" />

    <EditText
        android:id="@+id/SignIn_Password"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/SignIn_Email"
        android:layout_marginStart="15dp"
        android:layout_marginTop="24dp"
        android:layout_toEndOf="@+id/textView2"
        android:background="@color/colorPrimary"
        android:ems="10"
        android:inputType="textPassword" />

    <TextView
        android:id="@+id/textView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_above="@+id/SignIn_Password"
        android:layout_alignStart="@+id/imageView"
        android:text="Email"
        android:textColor="@android:color/black" />

    <TextView
        android:id="@+id/textView2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignBottom="@+id/SignIn_Password"
        android:layout_alignEnd="@+id/textView"
        android:text="Password"
        android:textColor="@android:color/black" />

    <TextView
        android:id="@+id/forgotText"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/SignIn_Password"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="22dp"
        android:text="Forgot Password?"
        android:clickable="true"
        android:textColor="@android:color/black"
        android:textStyle="italic" />

    <Button
        android:id="@+id/button"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/forgotText"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="22dp"
        android:text="Log In" />

    <Button
        android:id="@+id/button2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignStart="@+id/button"
        android:layout_below="@+id/button"
        android:layout_marginTop="1dp"
        android:text="Sign Up" />

</RelativeLayout>
