<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.example.akoni.conread.EditProfile">

    <ImageView
        android:id="@+id/imageView2"
        android:layout_width="150dp"
        android:layout_height="70dp"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="31dp"
        app:srcCompat="@drawable/use" />

    <EditText
        android:id="@+id/editName"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentEnd="true"
        android:layout_below="@+id/imageView2"
        android:layout_marginEnd="11dp"
        android:layout_marginTop="40dp"
        android:background="@color/colorAccent"
        android:ems="10"
        android:inputType="textPersonName" />

    <EditText
        android:id="@+id/editAddress"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignEnd="@+id/editName"
        android:layout_below="@+id/editName"
        android:layout_marginTop="20dp"
        android:background="@color/colorAccent"
        android:ems="10"
        android:inputType="textPersonName" />

    <EditText
        android:id="@+id/editContact"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignStart="@+id/editAddress"
        android:layout_below="@+id/editAddress"
        android:layout_marginTop="20dp"
        android:background="@color/colorAccent"
        android:ems="10"
        android:inputType="textPersonName" />

    <EditText
        android:id="@+id/editUsername"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignStart="@+id/editContact"
        android:layout_below="@+id/editContact"
        android:layout_marginTop="20dp"
        android:background="@color/colorAccent"
        android:ems="10"
        android:inputType="textPersonName" />

    <EditText
        android:id="@+id/editOldPass"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignStart="@+id/editUsername"
        android:layout_below="@+id/editUsername"
        android:layout_marginTop="20dp"
        android:background="@color/colorAccent"
        android:ems="10"
        android:inputType="textPassword" />

    <EditText
        android:id="@+id/editNewPass"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignStart="@+id/editOldPass"
        android:layout_below="@+id/editOldPass"
        android:layout_marginTop="20dp"
        android:background="@color/colorAccent"
        android:ems="10"
        android:inputType="textPassword" />

    <EditText
        android:id="@+id/editRePass"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignStart="@+id/editNewPass"
        android:layout_below="@+id/editNewPass"
        android:layout_marginTop="20dp"
        android:background="@color/colorAccent"
        android:ems="10"
        android:inputType="textPassword" />

    <TextView
        android:id="@+id/textView9"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignBottom="@+id/editName"
        android:layout_alignParentStart="true"
        android:layout_marginStart="15dp"
        android:text="Name" />

    <TextView
        android:id="@+id/textView10"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_above="@+id/editContact"
        android:layout_alignStart="@+id/textView9"
        android:text="Address" />

    <TextView
        android:id="@+id/textView11"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignBottom="@+id/editContact"
        android:layout_alignStart="@+id/textView10"
        android:text="Contact No." />

    <TextView
        android:id="@+id/textView12"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_above="@+id/editOldPass"
        android:layout_alignStart="@+id/textView11"
        android:text="Username" />

    <TextView
        android:id="@+id/textView13"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignBottom="@+id/editOldPass"
        android:layout_alignStart="@+id/textView12"
        android:text="Old Password" />

    <TextView
        android:id="@+id/textView14"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignBottom="@+id/editNewPass"
        android:layout_alignStart="@+id/textView13"
        android:text="New Password" />

    <TextView
        android:id="@+id/textView15"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignBottom="@+id/editRePass"
        android:layout_alignStart="@+id/textView14"
        android:text="Re-type Password" />

    <Button
        android:id="@+id/saveButton"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/textView15"
        android:layout_marginTop="43dp"
        android:layout_toEndOf="@+id/textView14"
        android:text="save" />

    <Button
        android:id="@+id/cancelButton"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignTop="@+id/saveButton"
        android:layout_marginStart="24dp"
        android:layout_toEndOf="@+id/saveButton"
        android:text="cancel" />
</RelativeLayout>
